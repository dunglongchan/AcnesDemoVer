<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>

</data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgr">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/menu_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/icomoonultimate"
                android:padding="20dp"
                android:text="arrow-left3"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/svngothambold"
                android:text="Thông Tin Cá Nhân"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/menu_bar"
            android:layout_marginHorizontal="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/editinfor"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="35dp">

                    <RelativeLayout
                        android:layout_width="115dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7.5dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/avatar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/avatar"
                            app:riv_corner_radius="100dp" />

                        <ImageView
                            android:id="@+id/setavatar"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/camera2" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/svngothambold"
                        android:text="Name"
                        android:textColor="#009967"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/svngothambold"
                            android:text="Họ &amp; Tên"
                            android:textColor="#9B9BA5"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/fullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:fontFamily="@font/svngotham"
                            android:gravity="right"
                            android:inputType="textPersonName"
                            android:text="Full name"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/editfullname"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/icomoonultimate"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:text="arrow-right4"
                            android:textColor="#9B9BA5"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="#F0F0F0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/svngothambold"
                            android:text="Ngày sinh"
                            android:textColor="#9B9BA5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/svngotham"
                            android:gravity="right"
                            android:text="Birthday"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/editbirthday"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/icomoonultimate"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:text="arrow-right4"
                            android:textColor="#9B9BA5"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="#F0F0F0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/svngothambold"
                            android:text="Giới tính"
                            android:textColor="#9B9BA5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtgender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/svngotham"
                            android:gravity="right"
                            android:text="Sexual"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/editsexual"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/icomoonultimate"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:text="arrow-right4"
                            android:textColor="#9B9BA5"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="#F0F0F0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/svngotham"
                            android:text="Địa chỉ"
                            android:textColor="#9B9BA5"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:fontFamily="@font/svngotham"
                            android:gravity="right"
                            android:inputType="text"
                            android:text="Address"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/editaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/icomoonultimate"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:text="arrow-right4"
                            android:textColor="#9B9BA5"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="#F0F0F0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/svngothambold"
                            android:text="Điện thoại"
                            android:textColor="#9B9BA5"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/phone"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:fontFamily="@font/svngotham"
                            android:gravity="right"
                            android:inputType="number"
                            android:maxLength="10"
                            android:text="Phone Number"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/editphone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/icomoonultimate"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:text="arrow-right4"
                            android:textColor="#9B9BA5"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="#F0F0F0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/svngothambold"
                            android:text="Email"
                            android:textColor="#9B9BA5"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:fontFamily="@font/svngotham"
                            android:gravity="right"
                            android:inputType="textEmailAddress"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/editemail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/icomoonultimate"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:text="arrow-right4"
                            android:textColor="#9B9BA5"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="#F0F0F0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/svngothambold"
                            android:text="Tài khoản mạng xã hội"
                            android:textColor="#9B9BA5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/socialmedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/svngotham"
                            android:gravity="right"
                            android:text="Thiết lập ngay"
                            android:textColor="#009967"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/editsocialmedia"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/icomoonultimate"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:text="arrow-right4"
                            android:textColor="#9B9BA5"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="#F0F0F0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/svngothambold"
                            android:text="Thay đổi mật khẩu"
                            android:textColor="#9B9BA5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/editchangepass"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:fontFamily="@font/icomoonultimate"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:text="arrow-right4"
                            android:textColor="#9B9BA5"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="#F0F0F0" />
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/sfprodisplaybold"
                android:paddingHorizontal="65dp"
                android:paddingVertical="10dp"
                android:text="LƯU"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>