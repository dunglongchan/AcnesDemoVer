<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">#999999</item>
        <item name="itemTextColor">#666666</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">20sp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SurveyForm">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/ssbackgr</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SurveyOption">
        <item name="fontFamily">@font/svngotham</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TopBarView">
        <item name="android:background">@color/white</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">20sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/svngothambold</item>
    </style>

</resources>